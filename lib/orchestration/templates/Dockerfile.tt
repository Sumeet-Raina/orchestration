FROM ruby:<%= ruby_version %>
ARG BUNDLE_BITBUCKET__ORG
RUN apt-get update \
 && apt-get install -y node.js \
 && gem install bundler \
 && mkdir /application
WORKDIR /application
COPY Gemfile Gemfile.lock ./
RUN bundle install --deployment
ADD .build/context.tar.gz .
CMD ["bundle", "exec", "rails", "server", "-p", "3000"]
